@model IEnumerable<InsuranceApp.Models.Policy>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>PolicyView</title>
</head>
<body>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AmountInsured)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InceptionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstallmentPayment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClientId)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AmountInsured)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InceptionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InstallmentPayment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClientId)
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
